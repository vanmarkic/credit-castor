# Password for accessing the app (default: castor2025)
# Note: For Astro, all client-side env vars must use PUBLIC_ prefix
PUBLIC_APP_PASSWORD=castor2025

# Admin password for unlocking collective fields (default: admin2025)
PUBLIC_ADMIN_PASSWORD=admin2025

# Readonly mode - when true, all fields are readonly by default (users must toggle to edit)
# Default: true for both production and local development
PUBLIC_READONLY_MODE=true

# Firebase configuration (optional - app works without Firebase in localStorage-only mode)
# Get these values from Firebase Console: https://console.firebase.google.com/
# IMPORTANT: Use PUBLIC_ prefix for Astro client-side variables
PUBLIC_FIREBASE_API_KEY=your-api-key-here
PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
PUBLIC_FIREBASE_PROJECT_ID=your-project-id
PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
PUBLIC_FIREBASE_APP_ID=your-app-id
